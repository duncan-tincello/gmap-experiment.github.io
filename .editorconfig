# https://editorconfig.org/
# top-most EditorConfig file
root = true

[*]
indent_style = space
# Two seems to have displaced four spaces in modern JS projects.
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

# Markdown needs 4 spaces, see
# https://markdown-guide.readthedocs.io/en/latest/basics.html#lists-nested
# PHP needs 4 spaces as per PSR-2, see
# https://github.com/FriendsOfPHP/PHP-CS-Fixer/issues/3584
# and https://www.php-fig.org/psr/psr-2/#a1-survey-data
# HTML set to match PHP for reduced cognitive dissonance.
[*.{html,md,php}]
indent_size = 4
